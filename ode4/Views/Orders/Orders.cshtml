@model List<odev4.Models.Orders>
@{
    ViewBag.Title = "Admin Sayfası";
}

<div class="panel panel-default">
    <div class="panel-heading">Siparişler</div>
    <div class="panel-body">
        @if (Convert.ToBoolean(Session["loginRoles"]) == true)
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Sipariş</th>
                        <th>Hangi Ürün</th>
                        <th>Ürün Fiyatı</th>
                        <th>Adet</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.ordesnm</td>
                            <td>@item.productnm</td>
                            <td>@item.producprice ₺</td>
                            <td>@item.producpiece</td>
                            <td>@item.date</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            Session["loginRoles"] = false;
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Hata:</span>
                Bu Sayfa İçin Yetkiniz Yok
            </div>
        }        
    </div>
</div>

