@model List<odev4.Models.Complaints>
@{
    ViewBag.Title = "Admin Sayfası";
}

<div class="panel panel-default">
    <div class="panel-heading">Şikayetler</div>
    <div class="panel-body">

        @if (Convert.ToBoolean(Session["loginRoles"]) == true)
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Başlık</th>
                        <th>Konu</th>
                        <th>Neden</th>
                        <th>Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.complaintstitle</td>
                            <td>@item.complaintsSubject</td>
                            <td>@item.complaintWhy</td>
                            <td>@item.date</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        { 
            Session["loginRoles"] = false;
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Hata:</span>
                Bu Sayfa İçin Yetkiniz Yok
            </div>
        }        
     </div>
</div>